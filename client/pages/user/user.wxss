/* pages/user/user.wxss */
Page {
  background: #f8f8ff;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  z-index: -1;
}

.login-cnt {
  margin: 100rpx 30rpx 40rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 50rpx 30rpx;
  border-radius: 50%;
  background: #F3DC5F;
}
.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user-status {
  font-size: 25rpx;
  line-height: 35rpx;
  font-weight: bold;
}

.user-text {
  font-size: 20rpx;
  line-height: 24rpx;
  color: #383838;
}

.login-btn {
  background: #F3DC5F;
  width: 280rpx;
  height: 90rpx;
  border-radius: 20rpx;
  margin: 20rpx auto;
  text-align: center;
  line-height: 90rpx;
  font-weight: bold;
}

.login-cnt-else {
  margin: 100rpx 30rpx 0;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.func-list {
  margin: 3rpx 30rpx 40rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.list-item {
  margin: 0 40rpx;
  padding: 25px 0;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.list-item:first-child {
  border-bottom: 1px solid silver;  
}

.cust, .address {
  flex: 1;
}

