/* pages/order/order.wxss */
Page {
  background: #f8f8ff;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  z-index: -1;
}

.login-cnt {
  margin: 100rpx 30rpx 40rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 50rpx 30rpx;
  border-radius: 50%;
  background: #F3DC5F;
}
.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user-status {
  font-size: 25rpx;
  line-height: 35rpx;
  font-weight: bold;
}

.user-text {
  font-size: 20rpx;
  line-height: 24rpx;
  color: #383838;
}

.login-btn {
  background: #F3DC5F;
  width: 280rpx;
  height: 90rpx;
  border-radius: 20rpx;
  margin: 20rpx auto;
  text-align: center;
  line-height: 90rpx;
  font-weight: bold;
}

.order-container {
  margin: 100rpx 30rpx 40rpx;
  padding:40px;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

.empty-img {
  width:40px;
  height:40px;
}
.order-empty {
  font-size: 12px;
  color: #BFBFC1;
}

.order-header {
  display: flex;
  align-items: center;
  padding: 26rpx 29rpx 14rpx;
}

.order-header-img {
  width: 21rpx;
  height: 34rpx;
}

.order-header-text {
  margin-left: 10rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: rgba(52, 55, 61, 0.8);
}

.list-container {
  margin:10px;
  background:#fff;
  border-radius:10px;
  padding:5px;
}
.item-container {
  display: flex;
  position: relative;
}

.item-container + .item-container {
  border-top: 1px solid #f8f8ff;
}

.lItem-image {
  width: 120px;
  height: 100px;
  margin: 10px;
}

.item-info {
  padding: 10px;
  width: 100%;
  position: relative;
}

.item-name {
  font-size: 14px;
}

.item-price {
  display: block;
  font-weight: bolder;
}

.item-count {
  position: absolute;
  bottom: 20px;
  right: 20px;
}

.rate {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #F6E15F;
  color: #69713E;
}